{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch Ren'Py Game",
            "type": "shell",
            "command": "python",
            "args": [
                "-m", "renpy",
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build Ren'Py Distribution",
            "type": "shell",
            "command": "python",
            "args": [
                "-m", "renpy",
                "distribute",
                "${workspaceFolder}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Ren'Py Cache",
            "type": "shell",
            "command": "python",
            "args": [
                "-m", "renpy",
                "clean",
                "${workspaceFolder}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
