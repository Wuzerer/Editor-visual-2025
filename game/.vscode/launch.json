{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Ren'Py Game",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/script.rpy",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch Ren'Py with Arguments",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/script.rpy",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
